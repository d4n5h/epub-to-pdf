    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.3",
    "@types/cheerio": "^0.22.35",
    "@types/fs-extra": "^11.0.3",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
